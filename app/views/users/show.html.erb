<h1>My Listings</h1>
<% @user_listing.each do |x| %>
	<%= link_to x.name, listing_path(x) %><br/>
	<%= button_to "Edit", edit_listing_path(x), method: :get %>
	<%= button_to "Delete", listing_path(x), method: :delete %>
<% end %>

<br/>
<h1>My Reservations</h1>
	<% @user_reservation.each do |y|%>
		Reservation for <%= y.listing.name %><br/>
		Check in date : <%= y.check_in %><br/>
		Check out date : <%= y.check_out %><br/>
		By : <%=  %><br/>
	<% end %>

<br/>
<h1>My Listing Reservation</h1>
<% @user_listing.each do |t| %>
	<%=t.name %><br/>	
		<% t.reservations.each do |m| %>
			<%= m.check_in %><br/>
			<%= m.check_out %><br/>
		<% end %>
<% end %>

<br/>

<%= image_tag current_user.avatar_url.to_s, :class => "shovatar" %>

<%= form_for @user, :html => {:multipart => true} do |f| %>

  <p>
    <%= f.file_field :avatar %>
  </p>
  <p><%= f.submit %></p>
<% end %>


