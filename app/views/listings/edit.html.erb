<%= form_for @listings do |f| %>
	<%= f.label :name %><br/>
	<%= f.text_field :name %><br/>

	<%= f.label :property_type%><br/>
	<%= f.text_field :property_type %><br/>

	<%= f.label :room_number %><br/>
	<%= f.text_field :room_number %><br/>

	<%= f.label :bed_number %><br/>
	<%= f.text_field :bed_number %><br/>

	<%= f.label :guest_number %><br/>
	<%= f.text_field :guest_number %><br/>

	<%= f.label :country %><br/>
	<%= f.text_field :country %><br/>

	<%= f.label :state  %><br/>
	<%= f.text_field :state %><br/>

	<%= f.label :city %><br/>
	<%= f.text_field :city %><br/>

	<%= f.label :zipcode %><br/>
	<%= f.text_field :zipcode %><br/>

	<%= f.label :address %><br/>
	<%= f.text_field :address %><br/>

	<%= f.label :price %><br/>
	<%= f.text_field :price %><br/>

	<%= f.label :description %><br/>
	<%= f.text_field :description %><br/>

	<%= f.label :smoking_allowed %><br/>
	<%= f.text_field :smoking_allowed %><br/>

	<%= f.submit %>
<% end %>

<br/>
<%= image_tag @listings.avatar_url.to_s %>

<%= form_for @listings, :html => {:multipart => true} do |f| %>

  <p>
    <%= f.file_field :avatar %>
  </p>
  <p><%= f.submit %></p>
<% end %>
